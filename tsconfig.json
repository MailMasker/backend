{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": ".build",
    "moduleResolution": "node",
    "rootDir": "./",
    "esModuleInterop": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": ["./src", "./src/email-templates/raw-loader.d.ts"],
  "exclude": ["node_modules", "./src/**/*.template.html"]
}
